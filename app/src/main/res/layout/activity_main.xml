<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_finger_authenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="@string/authenticate"/>

    <Button
        android:id="@+id/btn_blur_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_finger_authenticate"
        android:layout_alignTop="@+id/btn_finger_authenticate"
        android:layout_alignEnd="@+id/btn_finger_authenticate"
        android:layout_marginTop="60dp"
        android:text="@string/lock"/>

</RelativeLayout>